<div class="max-w-3xl mx-auto">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h1 class="text-lg leading-6 font-medium text-gray-900 mb-4">Generate New Email</h1>
      
      <%= form_with(model: @email, local: true, class: "space-y-6") do |f| %>
        <% if @email.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@email.errors.count, "error") %> prohibited this email from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @email.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :purpose, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :purpose, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm", 
              placeholder: "e.g., Introducing our new product to potential customers" %>
        </div>

        <div>
          <%= f.label :recipient_info, "Recipient Information", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :recipient_info, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "e.g., John Doe, CTO at Tech Corp, interested in AI solutions" %>
        </div>

        <div>
          <%= f.label :sender_info, "Sender Information", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :sender_info, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "e.g., Jane Smith, AI Solutions Specialist at Our Company" %>
        </div>

        <div>
          <%= f.label :parameters, "Email Parameters", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="space-y-4">
            <div>
              <label class="block text-sm text-gray-600">Tone</label>
              <%= select_tag "email[parameters][tone]", 
                  options_for_select(["Professional", "Friendly", "Formal", "Casual"]), 
                  class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md" %>
            </div>
            
            <div>
              <label class="block text-sm text-gray-600">Language</label>
              <%= select_tag "email[parameters][language]", 
                  options_for_select(["English", "Spanish", "French", "German"]), 
                  class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md" %>
            </div>

            <div>
              <label class="block text-sm text-gray-600">Reading Time</label>
              <%= select_tag "email[parameters][reading_time]", 
                  options_for_select(["30 seconds", "1 minute", "2 minutes"]), 
                  class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md" %>
            </div>
          </div>
        </div>

        <div class="flex justify-end">
          <%= f.submit "Generate Email", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>